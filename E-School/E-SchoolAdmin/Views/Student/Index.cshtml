    <div class="container">
        <!-- Hoverable rows start -->
        <div class="row" id="table-hover-row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">STUDENT LIST</h4>
                    </div>
                    <div class="card-content">
                      
                        <!-- table hover -->
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Student Name</th>
                                        <th>Student Surname</th>
                                        <th>Student No</th>
                                        <th>Started Date</th>
                                        <th>Lesson ID</th>
                                        <th>Teacher ID</th>
                                    <th>
                                        <a href="/Student/Add" class="btn  btn-success text-white">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                            </svg>
                                        </a>
                                    </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                               {
                                    <tbody>
                                        <tr>
                                            <td class="text-bold-500">@item.studentName</td>
                                            <td>@item.studentSurname</td>
                                            <td class="text-bold-500">@item.studentNo</td>
                                            <td>@item.startedDate</td>
                                            <td>@item.lessonId</td>
                                            <td>@item.teacherId</td>
                                               <td>
                                                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.studentId" class="btn  btn-danger text-white ">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                                        </svg>
                                                    </a>
                                                    <a asp-controller="Student" asp-action="Update" asp-route-id="@item.studentId" class="btn  btn-warning text-white ">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                        </svg>
                                                    </a>
                                                </td>
                                        </tr>
                                    </tbody>
                                }
                             

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- Hoverable rows end -->
        <!-- Responsive tables end -->
    </div>




